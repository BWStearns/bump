<h1>Listing LOEs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Customer</th>
    <th>Article</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @loes.each do |loe| %>
  <tr class="well spaceUnder">
    <td><%= loe.name %></td>
    <td><%= loe.customer %></td>
    <td><%= loe.article.map(&:title)%></td>
    <td><%= link_to 'Show', loe %></td>
    <td><%= link_to 'Edit', edit_lo_path(loe) %></td>
    <td><%= link_to 'Destroy', loe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

