<% @articles.each do |article| %>
      
      <tr class="well spaceUnder">
          
        <td><%= link_to article.title, article %></td>
        <!-- <td><%= article.article_body %></td> -->
        <td><%= article.author %></td>
        <td><%= article.analyst.name %></td>
        <td><%= article.outlet.name %></td>
        <!-- <td><%= article.submitted %></td> -->
        <td><%= article.pubdate %></td>
        <td><%= article.state %></td>
        <td><%= article.summary %></td>
        <!-- <td><%= article.url %></td> -->
        <td><%= article.loe.map(&:name).map(&:inspect).join(', ') %></td>
        <td><%= article.distribution %></td>
        <td><%= article.most_important %></td>
